function tribune_access($op, $node = NULL) {
  global $user;
  switch ($op) {
    case 'create':
      return user_access('create tribune node');
    case 'update':
      return user_access('edit own tribune') and ($user->uid == $node->uid);
    case 'delete':
      return user_access('delete own tribune') and ($user->uid == $node->uid);
    case 'view':
      return user_access('read tribunes');
    case 'post':
      return user_access('post in tribunes');
    case 'moderate tribune':
    case 'delete tribune post':
    case 'undelete tribune post':
    case 'delete moderated posts':
    case 'delete all posts':
      return ((($user->uid == $node->uid && $user->uid <> 0) or user_access('moderate all tribunes')) && $node->type == "tribune");
    case 'configure own tribune filters':
      return user_access('configure own tribune filters') and ($user->uid == $node->uid) and ($node->type = "tribune");
    case 'view tribunes history':
      return user_access('view tribunes history') and ($node->type == "tribune");
    case 'view tribunes information':
      return user_access('view tribunes information') and ($node->type == "tribune");
    default:
      return ($node->type == "tribune") and user_access($op);
  }
}

